{% extends 'base.html.twig' %}

{% block title %}Adidas{% endblock %}

{% block body %}
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                {% for shoe in shoes %}
                    <div class="col">
                        <div class="card shadow-sm">
                            <img src="{{ asset('uploads/'~brandName~'/'~shoe.Image) }}" class="card-img" alt="Image">
                            <div class="card-body">
                                <p class="card-text">{{ shoe.name }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <p>Modelo: {{ shoe.model }}</p>
                                    <p class="text-muted">{{ shoe.availables }} Disponibles</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
